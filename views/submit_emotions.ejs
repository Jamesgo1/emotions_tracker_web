<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emotions Tracker</title>
    <link rel="icon" type="image/png" sizes="32x32" href="../images/favicon.png">
    <!-- Bulma Version 0.9.4-->
    <link rel='stylesheet' href='https://unpkg.com/bulma@0.9.4/css/bulma.min.css'>
    <script src="https://kit.fontawesome.com/7dc3015a44.js" crossorigin="anonymous"></script>
</head>
<body>
<%- include("header"); %>

<section class="container">
    <form method="post" action="/submit">
        <p class="is-size-1 has-text-left has-text-weight-bold mx-5 mt-6 px-6 py-1">Score Your Emotions</p>
        <p class="is-size-4 has-text-left is-italic mx-5 px-6 py-6">Please ensure all fields are completed before
            submitting</p>
        <% emotion_array.forEach((emotion_color) => { %>
            <% var emotion_css = emotion_color[1]; %>
            <% var emotion_name = emotion_color[0]; %>

            <div class="columns is-vcentered">

                <div class="column">
                    <div class="field mx-6 px-6 py-4">
                        <label class="label is-large is-capitalized is-<%= emotion_css %>"><%= emotion_name %></label>
                    </div>
                </div>

                <div class="column">
                    <div class="control has-text-justified m-auto p-auto">
                        <div class="control">
                            <div class="select is-large is-<%= emotion_css %>">

                                <select name="<%= emotion_name %>_score" required>
                                    <% emotion_score_opts.forEach((score) => { %>
                                        <option><%= score %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
        <p class="is-size-1 has-text-left has-text-weight-bold mx-5 mt-6 px-6 py-1">Daily context</p>
        <p class="is-size-4 has-text-left is-italic mx-5 px-6 py-6">
            Enter any events that happened today in the box below (one per line). This will help to identify the causes
            of your emotional changes.
        </p>
        <textarea class="textarea is-large mx-6 px-6" placeholder="Enter your daily context - one per line"
                  rows="10" name="triggers"></textarea>
        <div class="field is-grouped is-grouped  mx-5 mt-6 px-6 py-6">
            <p class="control">
                <button class="button is-primary is-medium">
                    Submit
                </button>
            </p>
            <p class="control">
                <a class="button is-light is-medium" href="/">
                    Cancel
                </a>
            </p>
        </div>
    </form>
</section>
<div class="columns is-mobile is-centered">
    <div class="column is-half is-narrow"></div>
</div>
<%- include("footer"); %>
<script src="../js/bulma.js"></script>
</body>
</html>